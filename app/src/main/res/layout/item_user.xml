<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_small_8"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/user_item_avatar_image_view"
        android:layout_width="@dimen/item_avatar_size_48"
        android:layout_height="@dimen/item_avatar_size_48"
        tools:ignore="ContentDescription"
        tools:srcCompat="@drawable/ic_error_black_48" />

    <TextView
        android:id="@+id/user_item_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/spacing_small_8"
        android:textColor="@android:color/black"
        tools:text="User" />

</LinearLayout>